.Paragraphs-root 
    overflow-y auto
    flex 1.8
    height 100%
    padding 38px
    margin 20px

.new-green
    border-right 8px #bbb solid
    margin-right -20px
    padding-right 14px
    border-radius 5px
    cursor pointer
    margin-bottom: 4px !important
    position: relative
    
.active-fragment
    border-color #bbb !important
    
.Mainpage-paragraphs
    box-shadow 0px 0px 5px 1px lightgrey
    margin-right 20px
    overflow-y auto
    height 100%
    width 66%

.Mainpage-source
    height 100%
    width 34%
    overflow-y auto

.seperator
    display block
    width 100%
    &.redBorder 
        background #81e4ff
    &.yellowBorder
        background #00caff
    &.greenBorder
        background #0089f8
    &.blueBorder 
        background #006ac8
    &.greyColor
        background #e8e6e6


.redBorder 
    border-color #81e4ff

.yellowBorder
    border-color #00caff

.greenBorder
    border-color #0089f8

.blueBorder 
    border-color #006ac8
