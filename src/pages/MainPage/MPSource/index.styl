.Source-root
    //border 1px dashed black
    display flex
    flex 1
    flex-direction column
    margin-left 25px
    height 95%

.sourse-single-text
    margin 8px
    font-size 0.7vw

.source-header-and-text
    display flex
    flex 1
    flex-direction column
    border 1px solid black
    margin-bottom 10px 
    border-radius 10px
    align-items center
    lign-height: 1
    overflow hidden
    cursor pointer

.sourse-all-text
    flex 1
    display flex
    flex-direction column
    overflow visible

.sourse-header
    padding 5px 0 5px 7px
    font-weight bold
    width 100%
    background-color #DCDCDC
    display flex
    align-items: center;
    height: 40px
    font-size 0.9vw


