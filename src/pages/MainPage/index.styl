.MainPage-root
    background #F8F9FA
    height 100%
    .header
        padding-left 20px
        padding-top 20px
    
    .content
        flex-direction column
        flex-direction row
        border-radius 10px
        line-height 1
        padding 15px
        display flex
        height 90.1%
        flex 1
        

.Mainpage-source
    box-shadow: 0px 0px 5px 1px #d3d3d3
    background white

.MainPage-ruler
    display flex
    justify-content center
    padding 0 6px

.header-btn {
    background-color: transparent;
    border-radius: 10px;
    padding: 2px 8px;
    margin: 7px 0 0 20px;
    color: rgba(0, 0, 0, 0.45);
    border 1px solid gray;
}
.header-btn:hover {
    cursor: pointer
}